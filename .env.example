# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# Database
DATABASE_PATH=./data/glasscloud.db

# Security - GENERATE SECURE VALUES FOR PRODUCTION
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=CHANGE_ME_generate_secure_random_value_32_chars
ENCRYPTION_KEY=CHANGE_ME_generate_secure_random_value_32_chars

# CORS - comma-separated origins
CORS_ORIGINS=http://localhost:3000

# Google OAuth - Create at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# WebSocket (optional)
WS_PING_INTERVAL_MS=30000
WS_PONG_TIMEOUT_MS=10000
